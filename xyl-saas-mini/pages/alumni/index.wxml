<view class="container">
  <van-search
    value="{{ searchValue }}"
    placeholder="请输入校友姓名或专业"
    bind:search="onSearch"
    bind:clear="onClear"
  />

  <view class="alumni-list">
    <block wx:for="{{ alumniList }}" wx:key="id">
      <view class="alumni-card">
        <view class="alumni-info">
          <view class="name-row">
            <text class="name">{{ item.name }}</text>
            <van-tag type="primary" plain wx:if="{{ item.enrollmentYear }}">{{ item.enrollmentYear }}级</van-tag>
          </view>
          <view class="detail-row">
            <text>专业：{{ item.major || '未知' }}</text>
          </view>
          <view class="detail-row">
            <text>单位：{{ item.company || '未知' }}</text>
          </view>
           <view class="detail-row">
            <text>职位：{{ item.position || '未知' }}</text>
          </view>
        </view>
        <view class="action">
           <van-button size="small" type="primary" data-id="{{item.id}}" bind:click="viewDetail">查看详情</van-button>
        </view>
      </view>
    </block>
    <view wx:if="{{ alumniList.length === 0 }}" class="empty-tip">
      暂无校友信息
    </view>
  </view>
</view>
